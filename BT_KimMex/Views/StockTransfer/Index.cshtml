            function initialDataTable() {
                var t = $('#stockTransferTable').DataTable({
                    "bDestroy": true,
                    "ajax": {
                        "url": "/StockTransfer/GetStockTransferByDaterangeAndStatusListItemsAJAX",
                        "type": "GET",
                        "dataType": "json",
                        "data": {
                            dateRange: $('#reportrange span').html(),
                            status: $('#ddr_status').val(),
                        }
                    },
                    "columns": [
                        { "data": "stock_transfer_id" },
                        { "data": "created_at_text" },
                        {
                            "render": function (data, type, full, meta) {
                                return '<a href="/StockTransfer/Detail/' + full.stock_transfer_id + '">' + full.stock_transfer_no + '</a>';
                            }
                        },
                        { "data": "item_request_no" },
                        { "data": "project_fullname" },
                        { "data": "warehouse_name" },
                        { "data": "from_warehouse_name" },
                        { "data": "created_by_text" },
                        { "data": "show_status" },
                        { "data": "sr_status" },
                        { "data": "mr_status" },
                        { "data": "received_status" },
                        {
                            "render": function (data, type, full, meta) {
                                return '<a href="/StockTransfer/Detail/' + full.stock_transfer_id + '" class="w3-button w3-tiny w3-green">View Detail</a>';
                            }
                        },
                    ],
                    "order": [[2, "desc"]],
                });
                t.on('order.dt search.dt', function () {
                    t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();

                @if (User.IsInRole(Role.SystemAdmin) || User.IsInRole(Role.Purchaser))
                {
                    <text>
                $('#stockTransferTable_filter').append('<a href="@Url.Action("Create", "StockTransfer")" class="w3-button w3-tiny w3-teal pull-left" style="margin-right:10px !important;">New Request</a>');
                    </text>
                }

            }
