@model IEnumerable<BT_KimMex.Models.StockTransferViewModel>
@using BT_KimMex.Class
@{
    ViewBag.Title = "Index";
    string status = string.Empty;
    if (string.IsNullOrWhiteSpace(Request.QueryString["status"]))
    {
        status = string.Empty;
    }
    else
    {
        status = Request.QueryString["status"].ToString();
    }
}
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

<style type="text/css">
    #stockTransferTable tr td {
        vertical-align: middle !important;
    }

        #stockTransferTable tr td:nth-child(9), #stockTransferTable tr td:nth-child(10), #stockTransferTable tr td:nth-child(11), #stockTransferTable tr td:nth-child(12) {
            text-align: center !important;
        }
</style>

<h3 class="title">Stock Transfer List</h3>

<div class="well" style="padding:8px !important; padding-bottom:30px !important;">
    <div class="form-group">
        <label class="control-label col-md-2">Requested Date:</label>
        <div class="col-md-3">
            <div id="reportrange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                <i class="fa fa-calendar"></i>&nbsp;
                <span></span> <i class="fa fa-caret-down"></i>
            </div>
        </div>
        <label class="control-label col-md-2">Status:</label>
        <div class="col-md-3">
            <select class="form-control" id="ddr_status" name="ddr_status" style="width:100% !important;">
                <option value="0">All</option>
                <option value="@Status.Pending">@ShowStatus.STCreated</option>
                <option value="@Status.PendingFeedback">@ShowStatus.PendingFeedback</option>
                <option value="@Status.Feedbacked">@ShowStatus.PendingFeedback</option>
                <option value="@Status.Completed">@ShowStatus.STApproved</option>
                <option value="@Status.Approved">@ShowStatus.STChecked</option>
                <option value="@Status.Rejected">@ShowStatus.Rejected</option>
                <option value="@Status.cancelled">Cancelled</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="button" class="w3-button w3-tiny w3-blue" onclick="initialDataTable()">Filter</button>
        </div>
    </div>
</div>

<table class="table table-bordered" id="stockTransferTable">
    <thead>
        <tr>
            <th rowspan="2">ID</th>
            <th rowspan="2">Date</th>
            <th rowspan="2">Transfer No.</th>
            <th rowspan="2">PR Ref.</th>
            <th rowspan="2">Project</th>
            <th rowspan="2">To Warehouse</th>
            <th rowspan="2">From Warehouse</th>
            <th rowspan="2">Requester</th>
            <th colspan="4">Status</th>
            <th rowspan="2">Action</th>
            @*<th>Approve/ Feedback</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>*@
        </tr>
        <tr>
            <th>Action</th>
            <th>SR</th>
            <th>MR</th>
            <th>GRN</th>
        </tr>
    </thead>
