@model BT_KimMex.Class.UpdateProductCategoryViaExcelResultResponse
@{
    ViewBag.Title = "UpdateProductCategoryViaExcel";
}

<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm("UpdateProductCategoryViaExcel", "ProductCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })<div class="row form-group">
                <label class="control-label col-md-3 ">Excel File (.xlsx || .xls) <strong class="text-danger">*</strong> : </label>
                <div class="col-md-8">
                    <input type="file" name="fileName" id="fileName" class="form-control m0" />
                </div>
            </div><div class="form-group row">

                <div class="col-lg-offset-3 col-md-9 ml-auto">
                    <button type="submit" class="btn btn-primary" id="">Submit</button>
                    <a href="javascript:history.back()" class="btn btn-danger btn-site">Back</a>
                </div>
            </div>
    if (Model != null)
                {
                    <h4>Success Imported: @Model.success.Count()</h4>
                    <h4>Failed Imported: @Model.failed.Count()</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            @foreach(var failItem in Model.failed)
                    {
                        <tr>
                            <td>@failItem.product_category_id</td>
                            <td>@failItem.sub_group_id</td>
                        </tr>
                    }
                        </table>
                    </div>
                }
        }
    </div>
</div>


