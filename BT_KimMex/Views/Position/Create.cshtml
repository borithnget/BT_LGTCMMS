@model BT_KimMex.Models.PositionViewModel

@{
    ViewBag.Title = "Create";
}

<h3 class="title">Create New Position</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Position <strong class="text-danger">*</strong>:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.position_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.position_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="w3-button w3-tiny w3-teal" />
                @Html.ActionLink("Back", "Index",null,new { @class = "w3-button w3-tiny w3-red" } )
            </div>
        </div>
    </div>
}