@model IEnumerable<BT_KimMex.Models.PurchaseRequisitionViewModel>
@using BT_KimMex.Class;
@{
    ViewBag.Title = "ApprovalList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

<h3 class="title">Purchase Requisition Approval List</h3>

<div class="well" style="padding:8px !important; padding-bottom:30px !important;">
    <div class="form-group">
        <label class="control-label col-md-2">Requested Date:</label>
        <div class="col-md-3">
            <div id="reportrange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                <i class="fa fa-calendar"></i>&nbsp;
                <span></span> <i class="fa fa-caret-down"></i>
            </div>
        </div>
        <label class="control-label col-md-2">Status:</label>
        <div class="col-md-3">
            <select class="form-control" id="ddr_status" name="ddr_status">
                <option value="0">All</option>
                <option value="@Status.Pending">@ShowStatus.PRCreated</option>
                <option value="@Status.Approved">@ShowStatus.PRApproved</option>
                <option value="@Status.Rejected">@ShowStatus.PRRejected</option>
                <option value="@Status.RequestCancelled">@ShowStatus.PRRequestCancelled</option>
                <option value="@Status.cancelled">@ShowStatus.MRCancelled</option>
                <option value="@Status.MREditted">@ShowStatus.MREditted</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="button" class="w3-button w3-tiny w3-blue" onclick="inititalDataTable(true)">Filter</button>
        </div>
    </div>
</div>

