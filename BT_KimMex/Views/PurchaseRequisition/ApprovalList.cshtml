@section scripts{
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.min.js" type="text/javascript"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {

            $('#ddr_status').select2();

            var start = moment().subtract(29, 'days');
            var end = moment();

            function cb(start, end) {
                $('#reportrange span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'));
            }

            $('#reportrange').daterangepicker({
                startDate: start,
                endDate: end,
                ranges: {
                    'Today': [moment(), moment()],
                    'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                }
            }, cb);

            cb(start, end);

            var status = getUrlVars()['status'];
            console.log(status);
            if (status == undefined) {
                $('#ddr_status').select2();
                inititalDataTable(true);
            } else {
                $('#ddr_status').select2().val(status).trigger("change");
                inititalDataTable(false);
            }

            //inititalDataTable();

            
        });

        function inititalDataTable(isIncludeDate) {
            var t = $('#table').DataTable({
                "destroy": true,
                //"responsive": true,
                //"autoWidth": false,
                //"scrollX": true,
                "processing": true,
                "ajax": {
                    "url": "/PurchaseRequisition/GetPurchaseRequisitionApprovalListItemsByDateRangeandStatusAJAX",
                    "type": "GET",
                    "datatype": "json",
                    "data": {
                        dateRange: $('#reportrange span').html(),
                        status: $('#ddr_status').val(),
                        isIncludeDate:isIncludeDate
                    }
                },
                "columns": [
                    { "data": "purchase_requisition_number" },
                    { "data": "created_at_text" },
                    {
                        "render": function (data, type, full, meta) {
                            var btn = '<a href="/PurchaseRequisition/Detail/' + full.purchase_requisition_id + '">' + full.purchase_requisition_number + '</a>';
                            return btn;
                        }
                    },

                    { "data": "created_by_text" },
                    { "data": "materail_request_number" },
                    { "data": "project_fullname" },
                    { "data": "show_status_text" },
                    {
                        "render": function (data, type, full, meta) {
                            //var btn = '<a href="javascript:void(0)" id="' + full.Id + '" class="btn btn-xs default btn-edit"><i class="fa fa-edit"></i> Edit</a> ';
                            console.log(full);
                            var btn = '<a href="/PurchaseRequisition/Detail/' + full.purchase_requisition_id + '" class="w3-button w3-tiny w3-green">View</a>';
                            return btn;
                        }
                    },

                ],
                'columnDefs': [
                    {
                        "targets": 0,
                        "className": "text-center",
                    },
                    {
                        "targets": 1,
                        "className": "text-center",
                    },
                    {
                        "targets": 2,
                        "className": "text-center",
                    },
                    {
                        "targets": 4,
                        "className": "text-center",
                    },
                    {
                        "targets": 7,
                        "className": "text-center",
                    },
                ],
                "order": [[2, "desc"]],
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        }

    </script>
}




