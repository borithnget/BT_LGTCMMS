@section Scripts{
    <script type="text/javascript" src="~/Scripts/custom/purchase_order.js"></script>
    <script type="text/javascript">
        $(function () {
            var isp;
            var isPMSC = false;
            var isDir = false;
            var isAdmin = false;
            var isCFO = false;
            var po_id;
            var role;

            @if (User.IsInRole("Admin"))
            {
                <text>isAdmin = true;</text>
            }
            @if (User.IsInRole("Purchaser")|| User.IsInRole("Main Stock Controller"))
            {
                <text>isPMSC=true;</text>
            }
            @if (User.IsInRole("Chief of Finance Officer"))
            {
                <text>isCFO=true;</text>
            }
            @if (User.IsInRole("Site Manager"))
            {
                <text>isDir = true;</text>
            }

            PurchaseOrder.InitialPurchaseOrderDataTable("Pending", isAdmin, isPMSC, isCFO, isDir);
            PurchaseOrder.InitialPurchaseOrderDataTable("Approved", isAdmin, isPMSC, isCFO, isDir);
            PurchaseOrder.InitialPurchaseOrderDataTable("Completed", isAdmin, isPMSC, isCFO, isDir);
            PurchaseOrder.InitialPurchaseOrderDataTable("Rejected", isAdmin, isPMSC, isCFO, isDir);

            if (isAdmin || (isAdmin && string.Compare(status, "Approved") == 0)) {
                $("#tab_pending").closest('li').addClass('active');
                $("#table_pending").addClass('active');
            }
            if (isPMSC) {
                $("#tab_pending").closest('li').addClass('active');
                $("#table_pending").addClass('active');
                $("#tab_approve").hide();
            }
            if (isCFO) {
                $("#tab_pending").closest('li').addClass('active');
                $("#table_pending").addClass('active');
                $("#tab_approve").hide();
            }
            if (isDir || (isDir && string.Compare(status, "Approved") == 0)){
                $("#tab_approve").closest('li').addClass('active');
                $("#table_approve").addClass('active');
                $("#tab_pending").hide();
