            $('#p_status').change(function () {
                var boq_status = $(this).val();
                if (boq_status != null || boq_status != "")
                    if (isp)
                        initial_datatable(boq_status, isAdmin, false);
                    else
                        initial_datatable(boq_status, isAdmin, true);
            });
        });
