                if (isCFO)
                    role = "Chief of Finance Officer";
                $('#cancelModal').modal('show');
            });
            $('.cancel-confirm').click(function () {
                if (po_id != '') {
                    $.ajax({
                        url: "/PurchaseOrder/Cancel",
                        data: {
                            'id': po_id,
                        },
                        type: 'GET',
