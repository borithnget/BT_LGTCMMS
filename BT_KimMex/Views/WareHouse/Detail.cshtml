@model BT_KimMex.Models.WareHouseViewModel
    @using BT_KimMex.Models
@{
    ViewBag.Title = "Detail";
    //Layout = "~/Views/Shared/_LayoutBackend.cshtml";
    //ViewBag.WarehouseActive = "active";
    //ViewBag.PageTitle = "View Warehouse Detail";
    //ViewBag.Controller = "Warehouse";
    //ViewBag.Action = "Detail";
}

<div class="form-horizontal">
    <h3 class="title">View Warehouse Detail</h3>
    <div class="row">
        <div class="form-group">
            @Html.Label("Date:", new { @class = "control-label col-md-2" })
            <label class="col-md-10" id="date"></label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.warehouse_name, new { @class = "control-label col-md-2" })
            @Html.DisplayFor(model => model.warehouse_name, new { @class = "col-md-10" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.warehouse_telephone, new { @class = "control-label col-md-2" })
            @Html.DisplayFor(model => model.warehouse_telephone, new { @class = "col-md-10" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.warehouse_address, new { @class = "control-label col-md-2" })
            @Html.DisplayFor(model => model.warehouse_address, new { @class = "col-md-10" })
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">QA/ QC Officer : </label>
            <div class="col-md-10">
                @*@if (Model.warehouseQAQC != null)
                {
                    @Model.warehouseQAQC.qaqc_name
                }*@
                @foreach(var qaqc in Model.warehouseQAQCs)
                {
                    <p>@qaqc.qaqc_name</p>
                }
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.site_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.site_name)
            </div>
            
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model=>model.list_stock_keeper,new { @class="control-label col-md-2"})*@
            <label class="control-label col-md-2">Stock Controller:</label>
            <div class="col-md-10">
               @foreach(var i in Model.list_stock_keeper)
               {
                   <p>@WareHouseViewModel.GetStock_keeper_name(i)</p>
               }
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="@Url.Action("Edit","WareHouse",new { id = Model.warehouse_id })" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>
            <a href="@Url.Action("Index","WareHouse")" class="btn btn-danger">Back</a>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#date').text(getFormattedDateMMDDYYYY(new Date('@Model.created_date')));
        });
    </script>
}
