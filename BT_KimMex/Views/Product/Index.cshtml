                        },
                        error: function (err) {
                            if (!$('.modal-header').hasClass('alert-danger')) {
                                $('.modal-header').removeClass('alert-success').addClass('alert-danger');
                                $('.delete-confirm').css('display', 'none');
                            }
                            $('.success-message').html(err.statusText);
                            $.notify('Your data has been error while deleting!', { className: 'error' });
                        }
                    });
                }
            });
        });

        function InitialDataTable() {
            var t=$('#ProductTable').DataTable({
                "ajax": {
                    "url": "@Url.Action("ProductDataTable", "Product")",
                    "type": "GET",
                    "dataType": "json"
                },
                dom: 'Bfrtip',
                buttons: [
                  //'copyHtml5',
                  'excelHtml5',
                  //'pdfHtml5',
                  //'csvHtml5',
                ],
                "pageLength": 50,
                "columns": [
                    { "data": "product_code" },
                    {
                        "render": function (data, type, full, meta) {
                            return '<a href="/Product/Details/' + full.product_id + '">' + full.class_name + '</a>';
                        }
                    },
                    { "data": "sub_group_name" },
                       { "data": "p_category_name" },
                        { "data": "product_type_name" },
                        { "data": "product_class_name" },
                        { "data": "product_size_name" },
                        { "data": "color_name" },
                        { "data": "brand_name" },
                        { "data": "model_factory_code" },
                        { "data": "product_unit" },
                        { "data": "product_name" },
                        {
                            "render": function (data, type, full, meta) {
                                console.log(full);
                                return parseFloat(full.unit_price).toFixed(2);
                            }
                    },
                    { "data": "labour_hour" },

