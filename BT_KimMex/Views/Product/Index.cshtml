            //        cell.innerHTML = i + 1;
            //    });
            //}).draw();
            $('button[aria-controls="ProductTable"]').removeClass('dt-button');
            $('button[aria-controls="ProductTable"]').addClass('btn btn-sm btn-primary');
            $('button[aria-controls="ProductTable"]').html('Export to Excel');

            $('.dt-buttons').append('<a href="@Url.Action("Create","Product")" class="btn btn-sm btn-primary btn-uppercase pull-left" style="margin-right:10px !important;">Add New</a><a href="@Url.Action("ImportExcel", "Product")" class="btn btn-sm pd-x-15 btn-primary btn-uppercase pull-left" style="margin-right:10px !important;">Import from Excel</a>' +
                '<a href="@Url.Action("UploadExcelLabourHour", "Product")" class="btn btn-sm btn-primary btn-uppercase pull-left" style="margin-right:10px !important;">Upload Labour Hour</a>');

        }
    </script>
}

















