
@{
    ViewBag.Title = "ImportBoQ";
}


<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    select.form-control {
        display: inline !important;
    }

    thead th {
        text-align: center !important;
        vertical-align: middle !important;
    }

   
</style>


@using (Html.BeginForm("ImportBoQ", "BOQ", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <h3 style="margin-bottom:10px !important;">Import BOQ from Excel file</h3>
            <h1></h1>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-4">BOQ Excel To Import (.xlsx || .xls) :</label>
                        <div class="col-md-8">
                            <input type="file" name="fileName" title="BOQ Excel Import" id="fileName" class="form-control m0" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Import" class="btn btn-default" />
                    <a href="@Url.Action("Index","BOQ",new { status = "All" })" class="btn btn-default">Cancel</a>
                </div>
            </div>
            
        </div>
    </div>
}


