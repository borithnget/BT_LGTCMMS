@model IEnumerable<BT_KimMex.Models.StockDamageViewModel>
@using BT_KimMex.Class
@{
    ViewBag.Title = "Index";
    bool isSK = false;
    bool isMSC = false;
    bool isAdmin = false;
    if (User.IsInRole("Stock Keeper"))
    {
        isSK = true;
    }
    if (User.IsInRole("Main Stock Controller")|| User.IsInRole("Purchaser"))
    {
        isMSC = true;
    }
    if(User.IsInRole("Admin"))
    {
        isAdmin = true;
    }
    string status = string.Empty;
    if (string.IsNullOrWhiteSpace(Request.QueryString["status"]))
    {
        status = string.Empty;
    }
    else
    {
        status = Request.QueryString["status"].ToString();
    }
}
<style type="text/css">
    #stockDamageTable{
        text-align:center !important;
        vertical-align:middle !important;
    }
    #stockDamageTable tr td{
        vertical-align:middle !important;
    }
</style>

<h3 class="title">Stock Damage List</h3>
<div class="row">
    <div class="form-group">
        <label class="control-label col-md-2">Stock Damage Status:</label>
        <div class="col-md-10">
            <select class="form-control" id="sd_status">
                <option value="All" selected>All</option>
                <option value="Feedbacked">Feedbacked</option>
                <option value="Pending">Pending</option>
                <option value="Pending Feedback">Pending Feedback</option>
                <option value="Completed">Completed</option>
                @*<option value="Rejected">Rejected</option>*@
            </select>
        </div>
    </div>
</div>
<table class="table table-bordered" id="stockDamageTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>SD No.</th>
            <th>Date</th>
            <th>Warehouse</th>
            <th>Invoice No.</th>
            <th>Invoice Date</th>
            <th>Status</th>
            <th>Approve/ Feedback</th>
            @*<th>Reject</th>*@
            <th>Detail</th>
            <th>Edit/ Prepare Feedback</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- delete project modal popup-->
<div class="modal fade" id="myModal" tabindex="=-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-danger">
                <h4 class="modal-title" id="myModalLabel">Comfirmation</h4>
            </div>
            <div class="modal-body">
                <p class="success-message">Are you sure to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default delete-confirm">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    No
                </button>
            </div>
        </div>
    </div>
</div>

<!-- approve project modal popup-->
<div class="modal fade" id="approveModal" tabindex="=-1" role="dialog" aria-labelledby="approveModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-warning">
                <h4 class="modal-title" id="myModalLabel">Comfirmation</h4>
            </div>
            <div class="modal-body">
                <p class="success-message">Are you sure to <strong>Approve</strong> this item?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default approve-confirm">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>

            </div>
        </div>
    </div>
</div>

<!-- reject project modal popup-->
<div class="modal fade" id="rejectModal" tabindex="=-1" role="dialog" aria-labelledby="rejectModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-danger">
                <h4 class="modal-title" id="myModalLabel">Comfirmation</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <p class="success-message col-md-12">Are you sure to <strong>Reject</strong> this item?</p>
                    <label class="col-md-2">Comment:</label>
                    <div class="col-md-10">
                        <textarea class="form-control" rows="5" id="reject-comment"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default reject-confirm">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>

            </div>
        </div>
    </div>
</div>

