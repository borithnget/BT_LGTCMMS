<div class="w3-container">
    <table class="table table-bordered table-responsive" id="returnItemTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Return No.</th>
                <th>Warehouse</th>
                <th>Invoice No.</th>
                <th>Invoice Date</th>
                <th>Status</th>
                <th>Detail</th>
                @*<th>Approve/ Feedback</th>
                    @*<th>Reject</th>
                    <th>Detail</th>
                    <th>Edit/ Prepare Feedback</th>
                    <th>Delete</th>*@
            </tr>
        </thead>
        <tbody>

            @{
                int count = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td style="width:10px !important">@count</td>
                        <td>@CommonClass.ToLocalTime(Convert.ToDateTime(item.created_date)).ToString("dd/MM/yyyy")</td>
                        <td><a href="@Url.Action("Details","ItemReturn",new { id = item.itemReturnId })">@item.itemReturnNumber</a></td>
                        <td>@item.strWarehouse</td>
                        <td>@item.strInvoiceNumber</td>
                        <td>@item.strInvoiceDate</td>
                        <td class="text-center">
                            @{
                                if (string.Compare(item.itemReturnStatus, Status.Pending) == 0)
                                {
                                    <label class="label w3-red">@ShowStatus.Created</label>
                                }
                                else if (string.Compare(item.itemReturnStatus, Status.Approved) == 0)
                                {
                                    <label class="label w3-blue">@ShowStatus.Approved</label>
                                }
                                else if (string.Compare(item.itemReturnStatus, Status.Completed) == 0)
                                {
                                    <label class="label w3-green">@ShowStatus.Completed</label>
                                }
                                else
                                {
                                    <label class="label w3-grey">@item.itemReturnStatus</label>
                                }
                            }
                        </td>
                        <td class="text-center">@Html.ActionLink("View Detail", "Details", new { id = item.itemReturnId }, new { @class = "w3-button w3-tiny w3-green" })</td>
                        @*<td><a href="javascript:void(0)" id="@item.itemReturnId" class="approve-promp">Approve</a></td>
                            <td><a href="javascript:void(0)" id="@item.itemReturnId" class="reject-promp">Reject</a></td>
                            <td>@Html.ActionLink("View Detail","Details",new { id =item.itemReturnId}) </td>
                            <td>@Html.ActionLink("Edit", "Edit", new { id = item.itemReturnId })</td>
                            <td><a href="javascript:void(0)" id="@item.itemReturnId" class="delete-promp">Delete</a></td>*@
                    </tr>
                    count++;
                }
            }

        </tbody>
    </table>
</div>


<!-- delete project modal popup-->
<div class="modal fade" id="myModal" tabindex="=-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-danger">
                <h4 class="modal-title" id="myModalLabel">Comfirmation</h4>
            </div>
            <div class="modal-body">
