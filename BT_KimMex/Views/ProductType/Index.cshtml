@model BT_KimMex.Models.ProductTypeViewModel

@{
    ViewBag.Title = "Index";
}

<h3>Product Type List </h3>
<table class="table table-bordered mb-0" id="producttypetable">
    <thead>
        <tr>
            <th style="width: 100px;">ID</th>
            <th>Product Type Name</th>
            <th>Group</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts{
    <script type="text/javascript">
        $(function () {
            initialProductTypeDataTable();
        });

        function initialProductTypeDataTable() {
            var t = $('#producttypetable').DataTable({
                "ajax": {
                    "url": "@Url.Action("GetProducttypeJson", "ProductType")",
                    "type": "GET",
                    "dataType": "json"
                },
                    "columns": [
                        { "data": "product_category_id" },
                        {
                            "render": function (data, type, full, meta) {
                                return '<a href="/ProductType/Details/' + full.product_type_id + '">' + full.product_type_name + '</a>';
                            }
                        },
                        { "data": "product_category_name" },


                        {
                            "data": "updated_at", render: function (data, type, full, meta) {
                                if (data == null) {
                                    return "";
                                }
                                else {
                                    return getFormattedDateMMDDYYYY(new Date(parseInt(data.replace("/Date(", "").replace(")/", ""), 10)));
                                }
                            }
                        },
                ]
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
            $('select[name="producttypetable_length"]').addClass('datatable-control');
            $('input[aria-controls="producttypetable"]').addClass('datatable-control');
            $('#producttypetable_filter').append('<a href="@Url.Action("Create", "ProductType")" class="btn btn-default pull-left" style="margin-right:10px !important;">Add New</a>');
        }

    </script>
}
