@using BT_KimMex.Class;

@{
    ViewBag.Title = "PO Invoice List";
}
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
<div class="w3-panel w3-card-4">
    <div class="w3-container w3-display-container">
        <h3 class="title">@ViewBag.Title</h3>
        <a href="@Url.Action("Create", "Invoice")" class="w3-button w3-tiny w3-display-topright w3-green w3-border w3-border-green" style="margin-top:20px !important;">CREATE NEW</a>
    </div>
    <div class="w3-container w3-display-container">
        <div class="well" style="padding:8px !important; padding-bottom:30px !important;">
            <div class="form-group">
                <label class="control-label col-md-2">Transaction Date:</label>
                <div class="col-md-3">
                    <div id="reportrange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                        <i class="fa fa-calendar"></i>&nbsp;
                        <span></span> <i class="fa fa-caret-down"></i>
                    </div>
                </div>
                @*<label class="control-label col-md-1">Project</label>
                <div class="col-md-3">
                    <select class="form-control" id="filter_project_id">
                        <option value="0" selected>All</option>
                        @foreach (var project in BT_KimMex.Models.ProjectViewModel.GetProjectListItemsBySiteSupervisor(User.IsInRole(Role.SystemAdmin)))
                        {
                            <option value="@project.project_id">@project.project_full_name</option>
                        }
                    </select>
                </div>*@
                <div class="col-md-1">
                    <button type="button" class="w3-button w3-tiny w3-blue" onclick="inititalDataTable()">Filter</button>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" id="table1">
                <thead>
                    <tr>
                        
                        <th>PO Number</th>
                        <th>Invoice Date</th>
                        <th>Inv No.(Shipper)</th>
                        <th>Inv Amount</th>
                        <th>VAT Amount</th>
                        <th>Inv No. (Forwarder)</th>
                        <th>Transporation Fee</th>
                        <th>Import Duty</th>
                        <th>Paid Amount</th>
                        <th>Balance</th>
                        @*<th>Preparing Date</th>
                        <th>Prepared By</th>*@
                        <th>Doc. to FA </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>
</div>

<!-- payment modal popup-->
<div class="modal fade" id="paymentModal" tabindex="=-1" role="dialog" aria-labelledby="approveModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-warning">
                <h4 class="modal-title" id="myModalLabel">Payment</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="md_invoice_id" />
                <div class="form-group row">
                    <label class="col-md-4 control-label">Balance:</label>
                    <label class="col-md-8" id="md_balance"></label>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-4">Paid Date <strong class="text-danger">*</strong> :</label>
                    <div class="col-md-8">
                        <div class="input-group date" data-provide="datepicker" style="width:280px !important;">

                            <input type="text" id="md_payment_date" class="form-control" placeholder="MM/DD/YYYY" />
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group row">
                    <label class="control-label col-md-4">Paid Amount:</label>
                    <div class="col-md-8">
                        <input type="number" class="form-control" id="md_paid_amount" name="md_paid_amount" value="0" step="any" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" id="btn_md_submit">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

<!-- Document modal popup -->
<div class="modal fade" id="modalModal" tabindex="=-1" role="dialog" aria-labelledby="approveModalLabel">
    <div class="modal-dialog" role="document" style="width:100% !important;">
        <div class="modal-content">
            <div class="modal-header alert alert-warning" style="margin-bottom:0px !important;">
                <h4 class="modal-title" id="myModalLabel">Document Submital to FA</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="md_document_invoice_id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="control-label col-md-4">FA Received Date:</label>
                            <div class="col-md-8">
                                <div class="input-group date" data-provide="datepicker" style="width:280px !important;">

                                    <input type="text" id="md_document_received_date" class="form-control" placeholder="MM/DD/YYYY" />
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-4">Submit Via:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="md_document_submit_via" value="Original Set" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-4">Note:</label>
                            <div class="col-md-8">
                                <textarea class="form-control" id="md_document_note" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4"></div>
                            <div class="col-md-8">
                                <button class="btn btn-default" id="btn_md_document_submit">Submit</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="w3-panel w3-card-4" style="margin-top:0px !important;padding-top:10px !important;">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="md_table_document_history">
                                    <thead>
                                        <tr>
                                            <th>FA Received Date</th>
                                            <th>Submit Via</th>
                                            <th>Note</th>
                                            <th>Created By</th>
                                            <th>Created Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>

<!-- Void Invoice Modal -->
<div class="modal fade" id="voidInvoiceModal" tabindex="=-1" role="dialog" aria-labelledby="approveModalLabel">
    <div class="modal-dialog modal-lg" role="document" >
        <div class="modal-content">
            <div class="modal-header alert alert-warning" style="margin-bottom:0px !important;">
                <h4 class="modal-title" id="myModalLabel">Void Invoice</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="md_void_invoice_id" />
                <div class="row">
                    <div class="form-group row">
                        <label class="control-label col-md-4">Reason <strong class="text-danger">*</strong>:</label>
                        <div class="col-md-8">
                            <textarea class="form-control" id="md_void_invoice_reason">

                                </textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="btn_md_void_submit">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>

        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {

            var start = moment().subtract(29, 'days');
            var end = moment();

            function cb(start, end) {
                $('#reportrange span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'));
            }

            $('#reportrange').daterangepicker({
                startDate: start,
                endDate: end,
                ranges: {
                    'Today': [moment(), moment()],
                    'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                }
            }, cb);

            cb(start, end);
            $('#ddr_status').select2();
            $('#filter_project_id').select2();
            inititalDataTable();

            $('#md_payment_date').val('@Convert.ToDateTime(DateTime.Now).ToString("MM/dd/yyyy")');
            $('#md_document_received_date').val('@Convert.ToDateTime(DateTime.Now).ToString("MM/dd/yyyy")');
            $('div.date').on('changeDate', function () {
                $(this).datepicker('hide');
            });

            $('#table1 tbody').on('click', 'td a.btn_payment', function () {
                var invoiceId = $(this).attr('data-id');
                var balance = $(this).attr('data-balance');
                $('#md_invoice_id').val(invoiceId);
                $('#md_balance').text(parseFloat(balance).toFixed(2));
                $('#paymentModal').modal('show');
            });

            $('#table1 tbody').on('click', 'td a.btn_document', function () {
                var invoiceId = $(this).attr('data-id');

                $('#md_document_invoice_id').val(invoiceId);
                $("#md_document_submit_via").val('Original Set');
                $('#md_document_note').val('');
                $('#md_table_document_history tbody').empty();
                $.ajax({
                    url: "/Invoice/GetInvoiceDocumentListByInvoiceId",
                    data: {
                        'id': invoiceId,
                    },
                    type: 'get',
                    success: function (da) {
                        console.log(da);
                        if (da.result.isSuccess) {
                            if (da.data.length == 0) {
                                $('#md_table_document_history tbody').append("<tr><td colspan='5' class='text-center'>No Data</td></tr>");
                            } else {
                                $.each(da.data, function (index, item) {
                                    $('#md_table_document_history tbody').append("<tr>" +
                                        "<td>" + item.fa_received_date_text+"</td>" +
                                    
                                        "<td>" + item.submit_via +"</td>" +
                                        "<td>" + item.note + "</td>" +
                                        "<td>" + item.created_by_text+ "</td>" +
                                        "<td>" + item.created_at_text+"</td>" +
                                        "</tr>");
                                });
                            }
                        }

                    },
                    error: function (err) {
                        
                        $.notify('Your data has been error while saving.', { className: 'error' });
                    }
                });

                $('#modalModal').modal('show');
            });

            $('#table1 tbody').on('click', 'td a.btn_void_invoice', function () {
                var invoiceId = $(this).attr('data-id');

                $('#md_void_invoice_id').val(invoiceId);

                $('#voidInvoiceModal').modal('show');
            });

            $('#md_paid_amount').on('input', function (e) {
                var paid_amount = $(this).val();
                var balace = parseFloat($('#md_balance').text());
                console.log(paid_amount + ' ' + balace);
                if (paid_amount > balace) {
                    alert("Invalid paid amount.");
                    $(this).val(0);
                    return;
                }
            });

            $('#btn_md_submit').click(function (e) {
                var paid_amount = $('#md_paid_amount').val();
                var balace = parseFloat($('#md_balance').text());
                console.log(paid_amount + ' ' + balace);
                if (paid_amount > balace) {
                    alert("Invalid paid amount.");

                    return;
                }

                var model = {
                    invoice_id: $('#md_invoice_id').val(),
                    payment_date: $('#md_payment_date').val(),
                    paid_amount: paid_amount,
                };

                console.log(model);
                $.ajax({
                    url: "/Invoice/SaveInvoicePayment",
                        data: {
                            'model': model,
                        },
                        type: 'post',
                    success: function (da) {
                        console.log(da);
                            $('#paymentModal').modal('hide');
                        if (da.data.isSuccess) {
                            alert('Your data has been saved.');
                                window.location.reload();
                            }
                            else
                                $.notify('Your data has been error while saving.', { className: 'error' });
                        },
                        error: function (err) {

                            $.notify('Your data has been error while saving.', { className: 'error' });
                        }
                    });

            });

            $('#btn_md_document_submit').click(function (e) {
                $(this).attr('disabled', true);
                var fa_received_date = $('#md_document_received_date').val();
                var submit_via = $('#md_document_submit_via').val();
                var note = $('#md_document_note').val();
                var model = {
                    po_invoice_id: $('#md_document_invoice_id').val(),
                    fa_received_date: fa_received_date,
                    submit_via: submit_via,
                    note: note,

                }
                $.ajax({
                    url: "/Invoice/SubmitInvoiceDocument",
                    data: {
                        'model': model,
                    },
                    type: 'post',
                    success: function (da) {
                        console.log(da);
                        $('#modalModal').modal('hide');
                        if (da.result.isSuccess) {
                            alert('Your data has been saved.');
                            window.location.reload();
                        }
                        else {
                            $(this).attr('disabled', false);
                            $.notify('Your data has been error while saving.', { className: 'error' });
                        }
                            
                    },
                    error: function (err) {
                        $(this).attr('disabled', false);
                        $.notify('Your data has been error while saving.', { className: 'error' });
                    }
                });

            })

            $('#table1 tbody').on('click', 'td a.btn_po_report', function () {
                var quoteId = $(this).attr('data-quoteid');
                var supplierId = $(this).attr('data-supplierid');

                generateNewReport(quoteId, supplierId);

                //$('#md_invoice_id').val(invoiceId);
                //$('#md_balance').text(parseFloat(balance).toFixed(2));
                //$('#paymentModal').modal('show');
            });

            $('#btn_md_void_submit').click(function () {

                var invoiceId = $('#md_void_invoice_id').val();
                var reason = $('#md_void_invoice_reason').val().trim();

                if (reason == '') {
                    alert("Please fill in reason.");
                    return;
                }

                $.ajax({
                    url: "/Invoice/VoidInvoice",
                    data: {
                        'invoiceId': invoiceId,
                        'reason': reason
                    },
                    type: 'post',
                    success: function (da) {
                        console.log(da);
                            $('#voidInvoiceModal').modal('hide');
                        if (da.isSuccess) {
                            alert('Your data has been saved.');
                                window.location.reload();
                            }
                            else
                                $.notify('Your data has been error while saving.', { className: 'error' });
                        },
                        error: function (err) {

                            $.notify('Your data has been error while saving.', { className: 'error' });
                        }
                    });

                //alert(invoiceId);
            });
        });

        function inititalDataTable() {
            var t = $('#table1').DataTable({
                destroy: true,
                "processing": true,
                //"responsive": true,
                //"autoWidth": false,
                //"scrollX": true,
                "ajax": {
                    "url": "/Invoice/GetInvoiceListDataTable",
                    "type": "GET",
                    "datatype": "json",
                    "data": {
                        dateRange: $('#reportrange span').html(),
                        //status: $('#ddr_status').val(),
                        //projectId: $('#filter_project_id').val(),

                    }
                },
                "columns": [

                    {
                        "render": function (data, type, full, meta) {
                            var btn = '<a href="javascript:void(0)" class="btn_po_report" data-quoteid="' + full.po_Report.po_ref_id + '" data-supplierid="' + full.po_Report.po_supplier_id +'">' + full.po_Report.po_report_number + '</a>';

                            //return full.po_Report.po_report_number;
                            return btn;
                        }
                    },
                    { "data": "invoice_date_text" },
                    { "data": "invoice_number_shipper" },
                    { "data": "invoice_amount" },
                    { "data": "invoice_vat_amount" },
                    { "data": "invoice_number_forwarder" },
                    { "data": "transporation_fee" },
                    { "data": "import_duty" },
                    { "data": "paid_amount" },
                    { "data": "balance" },
                    //{ "data": "created_at_text" },
                    //{ "data": "created_by_text" },
                    {
                        "render": function (data, type, full, meta) {
                           
                            var btn = "";
                            if (full.document == null)
                                btn = "";
                            else
                                btn = "Done";

                            return btn;
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            //console.log(full);

                            var btn = " <a href='/Invoice/Detail/" + full.invoice_id + "' class='btn btn-xs btn-success'><i class='fa fa-eye'></i> Detail</a> ";
                            btn = btn + " <a href='javascript:void(0)' data-id='" + full.invoice_id + "' data-balance='" + full.balance + "' class='btn btn-xs btn-success btn_document'><i class='fa fa-file-text'></i> Document</a> "
                            if (full.balance>0) {
                                btn = btn + "<a href='javascript:void(0)' data-id='" + full.invoice_id + "' data-balance='" + full.balance + "' class='btn btn-xs btn-success btn_payment'><i class='fa fa-money'></i> Payment</a> ";
                                btn = btn + " <a href='/Invoice/Create/" + full.invoice_id + "' data-id='" + full.invoice_id + "' data-balance='" + full.balance + "' class='btn btn-xs btn-success btn_edit'><i class='fa fa-edit'></i> Edit</a>"
                            }
                            btn = btn + " <a href='javascript:void(0)' data-id='" + full.invoice_id + "' data-balance='" + full.balance + "' class='btn btn-xs btn-danger btn_void_invoice'><i class='fa fa-trash'></i> Void</a>";
                            return btn;
                        }
                    },

                ],
                //'columnDefs': [
                //    {
                //        "targets": 0,
                //        "className": "text-center",
                //    },
                //    {
                //        "targets": 7,
                //        "className": "text-center",
                //    },
                //    {
                //        "targets": 7,
                //        "className": "text-center",
                //    },
                //    {
                //        "targets": 8,
                //        "className": "text-center",
                //    },

                //],
                "order": [[2, "desc"]],
            });
        };

        function generateNewReport(poId, supplierId) {
            $.ajax({
                url: '/PurchaseOrder/GenerateReport',
                type: "post",
                dataType: "json",
                data: { id: poId, supplierID: supplierId },
                success: function (da) {
                    if (da.result == "success") {
                        //window.location.href = "/PurchaseOrder/Report?id=" + da.poId + "&supplierId=" + supplierId;
                        if (da.isHasVAT) {
                            var show1 = window.open("/PurchaseOrder/Report?id=" + da.poId + "&supplierId=" + supplierId, "_blank");
                            show1.focus();
                        }
                        if (da.isHasNotVAT) {
                            var show = window.open("/PurchaseOrder/ReportNotVAT?id=" + da.poId + "&supplierId=" + supplierId, "_blank");
                            show.focus();
                        }
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    console.log(textStatus);
                }
            });
        }

    </script>
}