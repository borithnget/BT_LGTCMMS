@model IEnumerable<BT_KimMex.Models.ClassTypeViewModel>

@{
    ViewBag.Title = "Index";
}

<h3>Class Type List </h3>
<table class="table table-bordered mb-0" id="classtypetable">
    <thead>
        <tr>
            <th style="width: 100px;">ID</th>
            <th>Class Type Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script type="text/javascript">
        $(function () {
            initialClassTypeDataTable();
        });

        function initialClassTypeDataTable() {
            var t = $('#classtypetable').DataTable({
                "ajax": {
                    "url": "@Url.Action("ClassTypeListJSON", "ClassType")",
                    "type": "GET",
                    "dataType": "json"
                },
                    "columns": [
                        { "data": "class_type_id" },
                        {
                                        "render": function (data, type, full, meta) {
                                            return '<a href="/ClassType/Details/' + full.class_type_id + '">' + full.class_type_name + '</a>';
                                        }
                        },
                        //{
                        //    "data": "updated_at", render: function (data, type, full, meta) {
                        //        if (data == null) {
                        //            return "";
                        //        }
                        //        else {
                        //            return getFormattedDateMMDDYYYY(new Date(parseInt(data.replace("/Date(", "").replace(")/", ""), 10)));
                        //        }
                        //    }
                        //},
                        {
                            "render": function (data, type, full, meta) {
                                return '<a href="/ClassType/Details/' + full.class_type_id + '" class="w3-button w3-tiny w3-green">View Detail</a> <a href="/ClassType/Edit/' + full.class_type_id + '" class="w3-button w3-tiny w3-orange">Edit</a>';
                            }
                        },
                    ],
                    "order": [[1, "asc"]],
            });
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
            $('select[name="classtypetable_length"]').addClass('datatable-control');
            $('input[aria-controls="classtypetable"]').addClass('datatable-control');
            $('#classtypetable_filter').append('<a href="@Url.Action("Create", "ClassType")" class="btn btn-default pull-left" style="margin-right:10px !important;">Add New</a>');
        }
    </script>
}