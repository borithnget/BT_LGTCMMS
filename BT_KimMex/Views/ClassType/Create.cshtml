@model BT_KimMex.Models.ClassTypeViewModel

@{
    ViewBag.Title = "Create";
}
<h3>Create New Class Type</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label class="col-form-label col-lg-2">Class Type <strong class="text-danger">*</strong>:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.class_type_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.class_type_name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <a href="@Url.Action("Index","ClassType")" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>

}
