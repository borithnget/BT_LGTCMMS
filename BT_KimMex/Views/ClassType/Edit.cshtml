@model BT_KimMex.Models.ClassTypeViewModel

@{
    ViewBag.Title = "Edit";
}

<h3 class="title">Edit Class Type</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.class_type_id)

        <div class="form-group">
            @Html.LabelFor(model => model.class_type_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.class_type_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.class_type_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="w3-button w3-tiny w3-teal" />
                @Html.ActionLink("Back", "Index",null,new { @class = "w3-button w3-tiny w3-red" })
            </div>
        </div>
    </div>
}

